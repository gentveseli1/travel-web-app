@model TravelWebApp.Models.Booking
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            color: #333;
        }

        .header {
            text-align: center;
            padding: 10px 0;
            border-bottom: 2px solid #444;
        }

        .title {
            font-size: 26px;
            font-weight: bold;
        }

        .section {
            margin-top: 25px;
        }

        .label {
            font-weight: bold;
        }

        table {
            width: 100%;
            margin-top: 15px;
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid #aaa;
            padding: 8px;
        }

        th {
            background: #f2f2f2;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="title">Booking Confirmation</div>
        <div>Travel Web App</div>
    </div>

    <div class="section">
        <h3>Customer Information</h3>
        <p><span class="label">Name:</span> @Model.Customer.FullName</p>
        <p><span class="label">Email:</span> @Model.Customer.Email</p>
        <p><span class="label">Phone:</span> @Model.Customer.Phone</p>
    </div>

    <div class="section">
        <h3>Trip Information</h3>
        <p><span class="label">Trip:</span> @Model.Trip.Title</p>
        <p><span class="label">Destination:</span> @Model.Trip.Destination?.Name</p>
        <p><span class="label">Transport:</span> @Model.Trip.TransportType</p>
        <p>
            <span class="label">Dates:</span> @Model.Trip.DepartureDate.ToShortDateString()
            -
            @Model.Trip.ReturnDate?.ToShortDateString()
        </p>
    </div>

    <div class="section">
        <h3>Booking Details</h3>

        <table>
            <tr>
                <th>Passengers</th>
                <th>Price Per Person</th>
                <th>Total</th>
            </tr>
            <tr>
                <td>@Model.NumberOfPassengers</td>
                <td>@Model.Trip.PricePerPerson €</td>
                <td>@Model.TotalPrice €</td>
            </tr>
        </table>

        <p><span class="label">Booking Date:</span> @Model.BookingDate</p>
        <p><span class="label">Status:</span> @Model.Status</p>
    </div>

    <div class="footer">
        Thank you for booking with us! Have a safe journey.
    </div>

</body>
</html>
