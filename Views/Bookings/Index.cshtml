@model IEnumerable<TravelWebApp.Models.Booking>

    <h2 class="mb-4">Bookings</h2>

    <div class="d-flex justify-content-start mb-3">
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> New Booking
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Customer</th>
                <th>Trip</th>
                <th>Date</th>
                <th>Passengers</th>
                <th>Total Price</th>
                <th>Status</th>
                <th style="width:180px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
        {
            <tr>
                <td>@b.Customer.FullName</td>
                <td>@b.Trip.Title</td>
                <td>@b.BookingDate.ToShortDateString()</td>
                <td>@b.NumberOfPassengers</td>
                <td>@b.TotalPrice €</td>
                <td>
                    <span class="badge bg-info">@b.Status</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@b.Id" class="btn btn-info btn-sm text-white"><i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
