@model IEnumerable<TravelWebApp.Models.Customer>

    @{
    ViewData["Title"] = "Customers";
    }

    <h2 class="mb-4">Customers</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Add Customer</a>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Passport</th>
                <th style="width:200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
        {
            <tr>
                <td>@c.FullName</td>
                <td>@c.Email</td>
                <td>@c.Phone</td>
                <td>@c.PassportNumber</td>

                <td>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm ms-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm ms-1">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
